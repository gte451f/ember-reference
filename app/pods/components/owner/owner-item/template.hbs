<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">
            {{owner.fullName}}
        </h3>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>Relationship</dt>
            <dd>{{owner.relationship}}</dd>

            <dt>Email</dt>
            <dd>{{owner.email}}</dd>

            <dt>Gender</dt>
            <dd>{{owner.gender}}</dd>
        </dl>
    </div>
    <div class="panel-footer">
        {{#link-to 'owner.edit' owner.id class="pull-right btn btn-primary"}}
            {{fa-icon 'pencil'}}
        {{/link-to}}

        <!--Not sure why i needed a component to make a button-->
        <div class="">{{owner/account-item account=owner.account}}</div>
    </div>
</div>